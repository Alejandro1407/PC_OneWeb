@model List<PcOneWeb.Servicios.Categoria>



<div class="container mt-5 ml-auto mr-auto row d-flex justify-content-center">
    @{ foreach (PcOneWeb.Servicios.Categoria categoria in Model)
        {
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 ArticuloDiv">
                <div id="img">
                    <img src="data:image/png;base64,@Convert.ToBase64String(categoria.imagen_categoria)" class="ProductoImg float-left img-fluid" alt="Alternate Text" />
                </div>
                <div id="Price" class="w-75">Envio Gratis</div>
                <p id="Tipe" class="text-center m-0">@categoria.nombre_categoria</p>
                <p class="text-muted text-center">Desde $5</p>
                <p class="text-muted text-center">@categoria.descripcion</p>
                <div class="m-0 p-0 text-center mt-lg-5"><a href="#" id="Link">@categoria.nombre_categoria ></a></div>
            </div>
        }
    }
</div>
